@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <tr class=" success">
            <th>Movie</th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    </table>
}
else
{
    <p>We don't have any movie yet.</p>
}

