@model Vidly.Models.Movie

@{
    ViewBag.Title = "DetailsView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.GenreType</li>
    @{DateTime rd = (DateTime)Model.ReleaseDate;}
    <li>Release Date: @rd.ToLongDateString()</li>
    @{ DateTime dateAdded = (DateTime)Model.DateAdded;}
    <li>Date Added: @dateAdded.ToLongDateString()</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>

